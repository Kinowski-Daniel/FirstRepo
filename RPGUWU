int atkpp;
int atak_P, atak_W;
using namespace std;
int los_atak() {
	srand(time(NULL));
	atkpp = rand() % 4 + 1;
	return atkpp;
};



struct statystyki_P {
	int hp;
	int dmg;
	int def;
	int mana;
	int atk_speed;
	
	int fireball(){
    cout << "fireball" << endl;
    return (dmg*0.004* atk_speed);
}
int uderzenie(){
    cout << "Uderzenie" << endl;
    return ((0.6* atk_speed *dmg)*0.044);
}
int heal(){
    atkpp = 0;
    cout << "leczenie" ;
    atkpp = hp+0.015*lvl;
    cout << " = " << atkpp << endl;
    return atkpp;
}
int wzmocnienie(){
    cout << "Wzmacniam" << endl;
    return (0.020*lvl*def);
};
int tarcza() {
	cout << "Blok" << endl;
	return (0.06 * lvl * def);
};
struct statystyki_W {
	int hp;
	int dmg;
	int def;
	int mana;

	int Bite() {
		cout << "Chomp Chomp" << endl;
		return (dmg * 0.004 * lvl);
	}
	int rock_throw() {
		cout << "" << endl;
		return (hp + 0.003 * lvl * def);
	}
	int spear_throw() {
		cout << "Ziuuuuu" << endl;
		return (0.4 * lvl);
	}
	int miss() {
		cout << "miss" << endl;
		return 0;
	}

};

