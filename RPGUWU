void champion_select() {
	int wybor = 0;
	cout << "------------------------------" << endl;
	cout << "1= assasin | 2= tank | 3= mag";
	cout << "------------------------------" << endl;
	cout << "\nwybiez postac 1,2,3 = "; cin >> wybor;
	cout << "------------------------------" << endl;
	switch (wybor)
	{
	case 1:
		gracz = assasin;
		break;
	case 2:
		gracz = tank;
		break;
	case 3:
		gracz = mag;
		break;
	default:
		cout << "\n error\n";
		champion_select();
		break;
	}
}

void ataki_mag() {
		int wybor;
		cout << "\n Atakuj! 0,1,2,3 = ";
		atak_W = 0; atak_P = 0;
		cin >> wybor;
		switch (wybor)
		{
		default: 
			atak_p = gracz.fireball();  break;
		case 1:
			gracz.hp = gracz.heal();  break;
		case 2:
			gracz.def = gracz.wzmocnienie(); break;
		};
}

	


